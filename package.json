{
  "name": "eventgate",
  "version": "1.0.0",
  "description": "A blueprint for MediaWiki REST API services",
  "main": "./app.js",
  "scripts": {
    "start": "service-runner",
    "test": "PREQ_CONNECT_TIMEOUT=15 nyc mocha && npm run lint && nsp check",
    "lint": "eslint --cache --max-warnings 0 --ext .js --ext .json lib routes app.js",
    "docker-start": "service-runner docker-start",
    "docker-test": "service-runner docker-test",
    "test-build": "service-runner docker-test && service-runner build --deploy-repo --force"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:wikimedia/eventgate.git"
  },
  "keywords": [
    "REST",
    "API",
    "service template",
    "MediaWiki"
  ],
  "author": "Wikimedia Service Team <services@wikimedia.org>",
  "contributors": [
    "Andrew Otto <otto@wikimedia.org>",
    "Petr Pchelko <ppchelko@wikimedia.org>"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://phabricator.wikimedia.org/tag/wikimedia-stream/"
  },
  "homepage": "https://github.com/wikimedia/eventgate",
  "dependencies": {
    "ajv": "^6.5.1",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.12",
    "cassandra-uuid": "^0.0.2",
    "compression": "^1.7.2",
    "domino": "^2.0.2",
    "express": "^4.16.3",
    "http-shutdown": "^1.2.0",
    "js-yaml": "^3.12.0",
    "lodash": "^4.17.11",
    "node-rdkafka": "^2.4.2",
    "preq": "^0.5.6",
    "service-runner": "^2.6.3",
    "swagger-router": "^0.7.1",
    "swagger-ui": "git+https://github.com/wikimedia/swagger-ui#master"
  },
  "devDependencies": {
    "eslint": "^5.9.0",
    "eslint-config-node-services": "^2.2.5",
    "eslint-config-wikimedia": "^0.5.0",
    "eslint-plugin-jsdoc": "^3.7.1",
    "eslint-plugin-json": "^1.2.0",
    "extend": "^3.0.1",
    "mocha": "^5.2.0",
    "nsp": "^3.2.1",
    "nyc": "^13.1.0"
  },
  "deploy": {
    "target": "debian",
    "node": "10.12.0",
    "dependencies": {
      "_all": []
    }
  }
}
